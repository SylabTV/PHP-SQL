<?php

// 1️⃣ Si on reçoit une couleur en POST → on crée le cookie
if (isset($_POST['color'])) {
    // le cookie expire dans 1 heure
    setcookie("color", $_POST['color'], time() + 3600, "/"); 
    // mettre à jour $_COOKIE immédiatement pour ce chargement
    $_COOKIE['color'] = $_POST['color'];
}

// 2️⃣ On définit la couleur par défaut
$css = "default.css";

// 3️⃣ Si le cookie existe → on change le CSS
if (isset($_COOKIE['color'])) {
    if ($_COOKIE['color'] === "1") {
        $css = "red.css";
    } elseif ($_COOKIE['color'] === "2") {
        $css = "blue.css";
    }
}

// 4️⃣ Var dump pour debug
echo "<pre>";
var_dump($_COOKIE);
echo "</pre>";

?>


